@model IEnumerable<WebTruyen_Asp.Class.BTV_Decu>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutMaster.cshtml";
}
<main>
    <section>
        <div class="container">
            <div class="row pt-4 ">
                <div class="page-content col-8 ">
                    <h5 class="Title mb-2 mt-1 py-2">Biên Tập Viên Đề Cử</h5>
                    <div class="row px-1">
                        @foreach (var truyen in Model)
                        {
                            <div class="col-md-6">
                                <div class="media">
                                    <a href="@Url.Action("ChiTietTruyen","Truyen",new {id=truyen.MaTruyen })"><img src="~/images/img_truyen/@truyen.AnhBia" width="85" height="110" style="box-shadow: 5px 5px 5px grey; "/></a>
                                    <div class="media-body px-3">
                                        <a class="a-no-style" href="@Url.Action("ChiTietTruyen","Truyen",new {id=truyen.MaTruyen })"><h4>@truyen.TenTruyen</h4></a>
                                        <div class="text-overflow-2-lines">
                                            @{
                                                StreamReader sr = File.OpenText(Server.MapPath("~/Data_ChuongTruyen/" + truyen.TenFoder + "/GioiThieu"));
                                                string strContents = sr.ReadToEnd();
                                            }
                                            @strContents                                               
                                            <br />
                                        }
                                        </div>
                                        <div class="align-items-center mt-2 py-1 ">
                                            <div class="float-left"><i class="fas fa-user-tie text-secondary"></i>&nbsp;&nbsp;@truyen.TenND</div>
                                            <a class="type-story float-right text-capitalize" href="#">@truyen.TheLoai</a>
                                        </div>
                                    </div>
                                </div>
                                <hr class="col-12" />
                            </div>
                        }
                    </div>
                </div>
                <!--    @* --------------------Bạn Đang Đọc ---------------------------------- *@ -->
            <div class="page-content col-md-4">
                <h5 class="Title mb-2 mt-1 py-2">Đang Đọc</h5>
                <div class="media mb-3">
                    <div class="shine shine-bg"></div>
                    <div class="media-body px-2">
                        <div class="shine-line shine-bg"></div>
                        <div class="shine-line shine-bg"></div>
                    </div>
                </div>
                <div class="media mb-3">
                    <div class="shine shine-bg"></div>
