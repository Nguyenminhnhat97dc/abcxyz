        </ul>
    </div>
    <div class="container" style="position:relative;z-index:0;">
        <div class="col-12 container-context">
            <div class="container-context-header ">
                @if (Model.IdChuong == 1)
                {
                    <a class="previous"><i class="fas fa-arrow-left"></i>&nbsp;chương trước</a>
                }
                else
                {
                    <a class="previous" href="@Url.Action("DocTruyen","Truyen",new { MaTruyen=Model.MaTruyen, IdChuong= Model.IdChuong - 1})"><i class="fas fa-arrow-left"></i>&nbsp;chương trước</a>
                }
                @if (Model.TongSoChuong == Model.IdChuong)
                {
                    <a class="next ">chương sau &nbsp; <i class="fas fa-arrow-right"></i></a>
                }
                else
                {
                    <a class="next" href="@Url.Action("DocTruyen","Truyen",new { MaTruyen=Model.MaTruyen, IdChuong= Model.IdChuong + 1})">chương sau &nbsp; <i class="fas fa-arrow-right"></i></a>
                }


            </div>
            <div class="TenTruyen">@Model.TenTruyen</div>
            <div class="Chuong">Chương @Model.IdChuong: @Model.TieuDe</div>
            <div class="NoiDung-Truyen">
                @foreach (string dataLine in userData)
                {
                    foreach (string dataItem in dataLine.Split('`'))
                    {@dataItem <text>&nbsp;</text>}
                    <br />
                }
            </div>
        </div>
    </div>
    <br>
    <div class="container">
        <div class="col-12 ">
            @if (Model.IdChuong == 1)
            {
                <a id="ChuongTruoc" href="#"><i class="fas fa-arrow-left"></i>&nbsp; chương trước</a>
            }
            else
            {
                <a id="ChuongTruoc" href="@Url.Action("DocTruyen","Truyen",new { MaTruyen=Model.MaTruyen, IdChuong= Model.IdChuong - 1})"><i class="fas fa-arrow-left"></i>&nbsp; chương trước</a>
            }
            @if (Model.TongSoChuong == Model.IdChuong)
            {
                <a id="ChuongSau" href="#">chương sau &nbsp;<i class="fas fa-arrow-right"></i></a>
            }
            else
            {
                <a id="ChuongSau" href="@Url.Action("DocTruyen","Truyen",new { MaTruyen=Model.MaTruyen, IdChuong= Model.IdChuong + 1})">chương sau &nbsp;<i class="fas fa-arrow-right"></i></a>
            }
        </div>
    </div>
    <script type="text/javascript" src="https://code.jquery.com/jquery-latest.pack.js"></script>
    <script src="~/Content/js/DocTruyen.js" type="text/javascript"></script>
