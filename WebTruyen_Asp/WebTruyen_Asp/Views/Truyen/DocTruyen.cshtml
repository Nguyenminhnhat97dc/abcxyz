                                                    <a class="item rounded-circle item-3" id="Color-3" style="font-size:24px"></a>
                                                </li>
                                                <li>
                                                    <a class="item rounded-circle item-4" id="Color-4" style="font-size:24px"></a>
                                                </li>
                                                <li>
                                                    <a class="item rounded-circle item-5" id="Color-5" style="font-size:24px"></a>
                                                </li>
                                                <li>
                                                    <a class="item rounded-circle item-6" id="Color-6" style="font-size:24px"></a>
                                                </li>
