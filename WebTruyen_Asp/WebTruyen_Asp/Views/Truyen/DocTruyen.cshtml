                                        <td class="row">
                                            <button class="btn btn-white rounded-circle px-2 ml-4 minus"><i class="fas fa-minus"></i></button>
                                            <div class="flex-fill text-center font-weight-semibold value">25 </div>
                                            <button class="btn btn-white rounded-circle px-2 mr-5 plus"><i class="fas fa-plus"></i></button>
                                        </td>
