                            <table class="table table-borderless">
                                <tbody>
                                    <tr>
                                        <td style="width:180px">
                                            <div class="d-inline-fex align-items-center" style="font-size:16px"><i class="fas fa-palette" style="font-size:30px"></i>&ensp;Màu Nền</div>
                                        </td>
                                        <td>
                                            <ul id="Master_color" class="list-unstyled select-color d-flex flex-wrap">
