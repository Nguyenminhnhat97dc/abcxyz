
<style>
    .slidershows-master2 {
        width: 100%;
        height: 360px;
        border-radius: 3px;
        display: flex;
        justify-content: flex-start;
        position: relative;
        overflow: hidden;
    }

    .slider-2-master2 {
        display: flex;
        height: 100%;
        width:  500%;
        flex-shrink: 0;
        transition: all 0.5s;
    }

        .slider-2-master2 section {
            flex-basis: 20%;
            width: 20%;
            flex-shrink: 0;
            flex: 1;
            display: flex;
            align-items: center;
            justify-content: center;
        }

    section .text-center img {
        width: 150px !important;
        height: 200px !important;
    }

    .arrow {
        position: absolute;
        cursor: pointer;
        top: 35%;
        border: 1px solid #fff;
        width: 40px;
        height: 30px;
        border-radius: 50%;
        text-align: center;
        background-color: #fff;
        padding-top: 1%;
        color: gray;
    }

        .arrow:hover {
            background-color: #dddddd;
            transition: all 1s;
        }

        .arrow.prev {
            left: 10px;
        }

        .arrow.next {
            right: 10px;
        }
</style>
<div class="mx-center mb-3 avatar" style="cursor: pointer;">
    <img src="~/images/avatar/@Model.Avatar" alt="">
</div>
<div class="text-center py-4">
    <h5>@Model.TenNguoiDang</h5>
</div>
<div class="row text-center">
    <div class="col-4">
        <i class="fas fa-book text-like"></i>
        <div class="py-2">Số Truyện</div>
        <div>@Model.SoTruyenDaDang</div>
    </div>
    <div class="col-4">
        <i class="fas fa-scroll text-like"></i>
        <div class="py-2">Số Chương</div>
        <div>@Model.TongSoChuongDaDang</div>
    </div>
    <div class="col-4">
        <i class="fas fa-hat-cowboy text-like"></i>
        <div class="py-2">Cấp</div>
        <div>1</div>
    </div>
</div>